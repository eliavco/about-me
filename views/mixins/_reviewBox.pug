mixin reviewBox(review)
    .reviews__card
        .reviews__avatar
            - const username = review.user ? review.user.name : 'Anonymous User';
            - const photo = (review.user && review.user.photo) ? review.user.photo : 'default.jpg';
            img.reviews__avatar-img(src=`/img/users/${photo}`, alt=`${username}`)
            h6.reviews__user= username
        p.reviews__text= review.content
        .reviews__rating
            each star in [1, 2, 3, 4, 5]
                svg.reviews__star(class=`reviews__star--${review.rating >= star ? 'active' : 'inactive'}`)
                    use(xlink:href='/img/icons.svg#icon-star')